@model FoodToGo.Models.Item
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "Details";
    var cart = @Model.Cart;
}


<head>
    <script src="https://kit.fontawesome.com/817e2bf535.js" crossorigin="anonymous"></script>
</head>

<h1>Item Details</h1>

<div>
    <h4>@Html.DisplayFor(model => model.ItemName)</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th class="col-sm-2">
                    Category
                </th>
                <th>Date Available</th>
                <th>Price</th>
                <th>Discount</th>
                <th class="col-sm-2">
                    Cart
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.Category)
                </td>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.Date)
                </td>
                <td>@Html.DisplayFor(model => model.Price)</td>
                <td>@Html.DisplayFor(model => model.Discount)</td>
                <td class="col-sm-10">
                    @if (cart == null)
                    {

                    } else {
                    <i class="fa fa-check" aria-hidden="true"></i>
                    }
                </td>

            </tr>
        </tbody>
   </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
